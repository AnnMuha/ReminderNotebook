<Window x:Class="ReminderNotebook.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика нагадувань"
        Height="200" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f5f7fa">

    <StackPanel Margin="20">
        <TextBlock Text="📊 Звіт про нагадування"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#2c3e50"
                   Margin="0 0 0 20"/>

        <StackPanel Orientation="Horizontal" Margin="0 5">
            <TextBlock Text="Усього: " FontWeight="Bold"/>
            <TextBlock x:Name="TotalCountText"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0 5">
            <TextBlock Text="Виконано: " FontWeight="Bold"/>
            <TextBlock x:Name="CompletedCountText"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0 5">
            <TextBlock Text="Очікують: " FontWeight="Bold"/>
            <TextBlock x:Name="PendingCountText"/>
        </StackPanel>
    </StackPanel>
</Window>
